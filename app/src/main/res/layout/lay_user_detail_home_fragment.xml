<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="700dp">

        <TextView
                android:text="@string/app_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblUsername" android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
        <TextView
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblName" android:layout_marginTop="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:layout_constraintTop_toBottomOf="@+id/lblUsername"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>
        <TextView
                android:text="@string/app_user_clan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblClan"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                app:layout_constraintTop_toBottomOf="@+id/lblName" android:layout_marginTop="8dp"/>
        <TextView
                android:text="@string/app_user_skills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblSkills" android:layout_marginTop="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:layout_constraintTop_toBottomOf="@+id/lblClan" android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:text="@string/app_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblProgress"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/lblSkills"/>
        <TextView
                android:text="@string/app_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblRank" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/lblProgress" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"/>
        <TextView
                android:text="@string/app_honor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblHonor" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/lblRank" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"/>
        <TextView
                android:text="@string/app_leaderboard_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblLeaderboardPosition" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/lblHonor" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"/>
        <TextView
                android:text="@string/app_languages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/lblLeaderboardPosition" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        <TextView
                android:text="@string/app_total_languages_trained"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblTotalLanguagesTrained" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"/>
        <TextView
                android:text="@string/app_highest_trained"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblHighestTrained" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/lblTotalLanguagesTrained" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>